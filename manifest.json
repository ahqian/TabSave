{
    "name": "TabShare",
    "version": "0.0.0",
    "description": "Save and reload tabs across Chrome browsers!",
    "permissions": ["storage", "activeTab", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/ts_icon16.png",
            "32": "images/ts_icon32.png"
        }
    },
    "icons": {
        "16": "images/ts_icon16.png",
        "32": "images/ts_icon32.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}
